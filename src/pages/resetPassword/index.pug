extends ../../template/layout


block vars
  - var pageID = 'page-reset-password';

block content
  .main
    .content-block
      include ../../template/member/loginMenu.pug 
      .form-block
        form#form-reset(action='' method='post')
          p  重設密碼
          .form-input
            input#password-reset.form-control(placeholder="請輸入新密碼(6-15碼英數字)" type="password" name="password" autocomplete="off", required)
          .form-input
            input#check-ps.form-control(placeholder="請再輸入一次新密碼" type="password" name="checkPassword" autocomplete="off", required)
          input.btn.btn-primary.btn-block.btn-submit-form(type="submit" value="確認")   